#pragma kernel CSMain

RWTexture2D<float4> Result;
StructuredBuffer<float> Spectrum;

[numthreads(32,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    if (id.x >= 1024) return;

    float value = saturate(Spectrum.Load(id.x)*1000.0f);
    Result[int2(id.x, 0)] = float4(value, value, value,1.0f);
}
